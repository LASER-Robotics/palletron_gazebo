<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Includes -->
  <xacro:include filename="drive_wheel.gazebo.xacro"/>

  <xacro:macro name="drive_wheel" params="name radius mass z_offset width separation reflect parent">
    <link name="${name}_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${width}"/>
        </geometry>
        <material name="black"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${width}"/>
        </geometry>
        <material name="orange"/>
      </collision>

      <inertial>
        <origin xyz="0 0 ${-0.00207 * reflect}" rpy="0 0 0"/>
        <mass value="${mass}"/>
        <xacro:cylinder_inertia m="${mass}" r="${radius}" h="${width}"/>
      </inertial>
    </link>

    <joint name="${name}_joint" type="continuous">
      <origin xyz="0 ${-separation / 2 * reflect} ${z_offset}" rpy="${-pi/2} 0 0"/>
      <parent link="${parent}"/>
      <child link="${name}_link"/>
      <axis xyz="0 0 1"/>
    </joint>

    <!-- Gazebo extensions -->
    <xacro:drive_wheel_gazebo name="${name}"/>
  </xacro:macro>
</robot>