<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="drive_wheel_macro" params="robot_namespace prefix mass radius length parent *origin">
    <link name="${robot_namespace}/${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${length}"/>
        </geometry>
        <material name="black"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${length}"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="${mass}"/>
        <xacro:solid_cylinder_inertia_macro mass="${mass}" radius="${radius}" height="${length}"/>
      </inertial>
    </link>

    <joint name="${robot_namespace}/${prefix}_joint" type="continuous">
      <xacro:insert_block name="origin"/>
      <parent link="${robot_namespace}/${parent}"/>
      <child link="${robot_namespace}/${prefix}_link"/>
      <axis xyz="0 0 1"/>
    </joint>
    
    <!-- Gazebo extensions -->
    <gazebo reference="${robot_namespace}/${prefix}_link">
      <material>Gazebo/Black</material>
      <kp>100000.0</kp>
      <kd>100.0</kd>
      <mu1>1.0</mu1>
      <mu2>1.0</mu2>
      <fdir1>1 0 0</fdir1>
      <maxVel>1.0</maxVel>
      <minDepth>0.003</minDepth>
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>
  </xacro:macro>
</robot>