<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="drive_wheel.gazebo.xacro"/>
  
  <xacro:macro name="drive_wheel_macro" params="prefix mass radius length parent *origin">
    <link name="${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${length}"/>
        </geometry>
        <material name="black"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${length}"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="${mass}"/>
        <xacro:solid_cylinder_inertia_macro mass="${mass}" radius="${radius}" height="${length}"/>
      </inertial>
    </link>

    <joint name="${prefix}_joint" type="continuous">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}_link"/>
      <axis xyz="0 0 1"/>
    </joint>
    
    <!-- Include Gazebo extensions -->
    <xacro:drive_wheel_gazebo_macro/>
  </xacro:macro>
</robot>