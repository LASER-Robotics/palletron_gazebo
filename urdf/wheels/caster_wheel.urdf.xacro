<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Includes -->
  <xacro:include filename="caster_wheel.gazebo.xacro"/>

  <xacro:macro name="caster_wheel" params="name radius mass x_offset y_offset z_offset parent">
    <link name="${name}_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="${radius}"/>
        </geometry>
        <material name="grey"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="${radius}"/>
        </geometry>
        <material name="orange"/>
      </collision>

      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="${mass}"/>
        <xacro:sphere_inertia r="${radius}" m="${mass}"/>
        <inertia />
      </inertial>
    </link>

    <joint name="${name}_joint" type="fixed">
      <origin xyz="${x_offset} ${y_offset} ${z_offset}" rpy="0 0 0"/>
      <parent link="${parent}"/>
      <child link="${name}_link"/>
    </joint>

    <!-- Gazebo extensions -->
    <xacro:caster_wheel_gazebo name="${name}"/>
  </xacro:macro>
</robot>