<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="differential_drive_macro" params="right_wheel_prefix left_wheel_prefix wheel_separation wheel_diameter wheel_max_torque wheel_max_acceleration">
    <gazebo>
      <plugin name="gazebo_ros_diff_drive" filename="libgazebo_ros_diff_drive.so">
        <odometry_topic>odom</odometry_topic>
        <odometry_frame>odom</odometry_frame>
        <update_rate>30</update_rate>
        <left_joint>${left_wheel_prefix}_joint</left_joint>
        <right_joint>${right_wheel_prefix}_joint</right_joint>
        <wheel_separation>${wheel_separation}</wheel_separation>
        <wheel_diameter>${wheel_diameter}</wheel_diameter>
        <max_wheel_torque>${wheel_max_torque}</max_wheel_torque>
        <max_wheel_acceleration>${wheel_max_acceleration}</max_wheel_acceleration>
        <command_topic>cmd_vel</command_topic>
        <publish_odom>true</publish_odom>
        <publish_odom_tf>true</publish_odom_tf>
        <publish_wheel_tf>false</publish_wheel_tf>
        <robot_base_frame>base_footprint</robot_base_frame>
      </plugin>

      <plugin name="gazebo_ros_joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
        <update_rate>30</update_rate>
        <joint_name>${right_wheel_prefix}_joint</joint_name>
        <joint_name>${left_wheel_prefix}_joint</joint_name>
      </plugin>
    </gazebo>
  </xacro:macro>
</robot>